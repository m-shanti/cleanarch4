@page
@model cleanarch4.Web.Pages.KnowPills.NewPill

@{
    Layout = "_Layout";
}

@if (string.IsNullOrEmpty(Model.Input.Message))
{

    <div class="row">
        <div class="col-md-4">
            <form asp-page="NewPill">
                <div class="form-floating">
                    <input asp-for="Input.KnowledgePill.Title" class="form-control"/>
                    <label asp-for="Input.KnowledgePill.Title"></label>
                </div>
                <div class="form-floating">
                    <textarea asp-for="Input.KnowledgePill.Description" class="form-control"></textarea>
                    <label asp-for="Input.KnowledgePill.Description"></label>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.KnowledgePill.Link" class="form-control"/>
                    <label asp-for="Input.KnowledgePill.Link"></label>
                </div>
                <button type="submit" class="btn-primary">Create</button>
            </form>
        </div>
    </div>

}
else
{
    <div>@Model.Input.Message</div>
}